pipeline{
    agent{
        dockerfile{
            filename "Dockerfile"
            args "--entrypoint=''"
        }
    }

    stages{
        stage('version k6'){
            steps{
                sh 'k6 -v'
            }
        }

        stage('Run tests'){
            steps{
                sh 'k6 run --vus "$NMBRVUE" 1 --duration "$DURATION"s  "$NOMSCRIPT"'
            }
        }
    }
}